{
  "name": "baseline-lens",
  "displayName": "Baseline Lens",
  "description": "Real-time web feature compatibility checking with Baseline data",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "baseline",
    "compatibility",
    "web-features",
    "css",
    "javascript",
    "html"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseline-lens.generateReport",
        "title": "Generate Baseline Report",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.refreshAnalysis",
        "title": "Refresh Analysis",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.toggleInlineIndicators",
        "title": "Toggle Inline Indicators",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.showPolyfillInfo",
        "title": "Show Polyfill Information"
      },
      {
        "command": "baseline-lens.showEducationalInfo",
        "title": "Show Educational Information"
      },
      {
        "command": "baseline-lens.openDocumentation",
        "title": "Open Documentation"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "baseline-lens.generateReport"
        },
        {
          "command": "baseline-lens.refreshAnalysis"
        },
        {
          "command": "baseline-lens.toggleInlineIndicators"
        }
      ]
    },
    "configuration": {
      "title": "Baseline Lens",
      "properties": {
        "baseline-lens.enabledFileTypes": {
          "type": "array",
          "default": ["css", "scss", "less", "javascript", "typescript", "html", "vue", "svelte"],
          "description": "File types to analyze for web feature compatibility"
        },
        "baseline-lens.supportThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum browser support percentage to consider a feature safe"
        },
        "baseline-lens.showInlineIndicators": {
          "type": "boolean",
          "default": true,
          "description": "Show inline compatibility indicators in the editor"
        },
        "baseline-lens.diagnosticSeverity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "default": "warning",
          "description": "Severity level for compatibility diagnostics"
        },
        "baseline-lens.excludePatterns": {
          "type": "array",
          "default": ["**/node_modules/**", "**/dist/**", "**/build/**"],
          "description": "File patterns to exclude from analysis"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "ts-loader": "^9.4.1"
  },
  "dependencies": {
    "web-features": "^0.8.0",
    "postcss": "^8.4.20",
    "acorn": "^8.8.1",
    "parse5": "^7.1.2"
  }
}