{
  "name": "baseline-lens",
  "displayName": "Baseline Lens",
  "description": "Real-time web feature compatibility checking with Baseline data directly in VS Code",
  "version": "0.7.1",
  "publisher": "kwesinavilot",
  "author": {
    "name": "Andrews Kwesi Ankomahene",
    "url": "https://github.com/kwesinavilot"
  },
  "icon": "assets/bg-logo.png",
  "license": "MIT",
  "pricing": "Free",
  "homepage": "https://github.com/kwesinavilot/baseline-lens#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kwesinavilot/baseline-lens.git"
  },
  "bugs": {
    "url": "https://github.com/kwesinavilot/baseline-lens/issues"
  },
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "AI",
    "Debuggers",
    "Testing",
    "Other"
  ],
  "keywords": [
    "baseline",
    "compatibility",
    "web-features",
    "css",
    "javascript",
    "html",
    "browser-support",
    "caniuse",
    "mdn",
    "web-standards",
    "linter",
    "diagnostics",
    "browser",
    "features",
    "web"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseline-lens.generateReport",
        "title": "Generate Baseline Report",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.refreshAnalysis",
        "title": "Refresh Analysis",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.toggleInlineIndicators",
        "title": "Toggle Inline Indicators",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.showPolyfillInfo",
        "title": "Show Polyfill Information"
      },
      {
        "command": "baseline-lens.showEducationalInfo",
        "title": "Show Educational Information"
      },
      {
        "command": "baseline-lens.exportTeamConfig",
        "title": "Export Team Configuration",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.importTeamConfig",
        "title": "Import Team Configuration",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.resetConfiguration",
        "title": "Reset Configuration to Defaults",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.validateConfiguration",
        "title": "Validate Configuration",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.showWalkthrough",
        "title": "Show Getting Started Guide",
        "category": "Baseline Lens"
      },
      {
        "command": "baseline-lens.openCommunity",
        "title": "Join Community",
        "category": "Baseline Lens"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "baseline-lens.generateReport"
        },
        {
          "command": "baseline-lens.refreshAnalysis"
        },
        {
          "command": "baseline-lens.toggleInlineIndicators"
        },
        {
          "command": "baseline-lens.exportTeamConfig"
        },
        {
          "command": "baseline-lens.importTeamConfig"
        },
        {
          "command": "baseline-lens.resetConfiguration"
        },
        {
          "command": "baseline-lens.validateConfiguration"
        },
        {
          "command": "baseline-lens.showWalkthrough"
        },
        {
          "command": "baseline-lens.openCommunity"
        }
      ]
    },
    "configuration": {
      "title": "Baseline Lens",
      "properties": {
        "baseline-lens.enabledFileTypes": {
          "type": "array",
          "default": [
            "css",
            "scss",
            "less",
            "javascript",
            "typescript",
            "html",
            "vue",
            "svelte"
          ],
          "description": "File types to analyze for web feature compatibility",
          "items": {
            "type": "string"
          }
        },
        "baseline-lens.supportThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum browser support percentage to consider a feature safe"
        },
        "baseline-lens.showInlineIndicators": {
          "type": "boolean",
          "default": true,
          "description": "Show inline compatibility indicators in the editor"
        },
        "baseline-lens.diagnosticSeverity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Severity level for compatibility diagnostics"
        },
        "baseline-lens.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**"
          ],
          "description": "File patterns to exclude from analysis",
          "items": {
            "type": "string"
          }
        },
        "baseline-lens.customBrowserMatrix": {
          "type": "array",
          "default": [],
          "description": "Custom browser support matrix. Leave empty to use default Baseline data. Format: ['chrome >= 90', 'firefox >= 88', 'safari >= 14']",
          "items": {
            "type": "string"
          }
        },
        "baseline-lens.baselineStatusMapping": {
          "type": "object",
          "default": {
            "widely_available": "info",
            "newly_available": "warning",
            "limited_availability": "error"
          },
          "description": "Map baseline status to diagnostic severity levels",
          "properties": {
            "widely_available": {
              "type": "string",
              "enum": [
                "error",
                "warning",
                "info",
                "none"
              ]
            },
            "newly_available": {
              "type": "string",
              "enum": [
                "error",
                "warning",
                "info",
                "none"
              ]
            },
            "limited_availability": {
              "type": "string",
              "enum": [
                "error",
                "warning",
                "info",
                "none"
              ]
            }
          }
        },
        "baseline-lens.enabledAnalyzers": {
          "type": "object",
          "default": {
            "css": true,
            "javascript": true,
            "html": true
          },
          "description": "Enable or disable specific analyzers",
          "properties": {
            "css": {
              "type": "boolean"
            },
            "javascript": {
              "type": "boolean"
            },
            "html": {
              "type": "boolean"
            }
          }
        },
        "baseline-lens.maxFileSize": {
          "type": "number",
          "default": 10485760,
          "minimum": 1024,
          "description": "Maximum file size in bytes to analyze (default: 10MB)"
        },
        "baseline-lens.analysisTimeout": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "description": "Analysis timeout in milliseconds per file"
        },
        "baseline-lens.enableTeamConfig": {
          "type": "boolean",
          "default": true,
          "description": "Enable team-level configuration from .baseline-lens.json files"
        },
        "baseline-lens.showEducationalHints": {
          "type": "boolean",
          "default": true,
          "description": "Show educational hints for newly available features"
        },
        "baseline-lens.autoRefreshOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh analysis when files are saved"
        }
      }
    },
    "walkthroughs": [
      {
        "id": "baseline-lens.getting-started",
        "title": "Get Started with Baseline Lens",
        "description": "Learn how to use Baseline Lens to check web feature compatibility and make your code production-ready across all browsers.",
        "steps": [
          {
            "id": "baseline-lens.step.open-file",
            "title": "Open a web file to get started",
            "description": "Open any CSS, JavaScript, or HTML file to see Baseline Lens analyze web features in real-time. The extension automatically detects modern web features and shows their browser compatibility status.\n\n[Open a File](command:workbench.action.files.openFile)\n\nTip: Try opening a CSS file with modern features like `:has()` selector or `container-queries` to see the compatibility indicators in action!",
            "media": {
              "markdown": "media/walkthrough/step1.md"
            },
            "completionEvents": [
              "onLanguage:css",
              "onLanguage:javascript",
              "onLanguage:html",
              "onLanguage:typescript",
              "onLanguage:javascriptreact",
              "onLanguage:typescriptreact"
            ]
          },
          {
            "id": "baseline-lens.step.view-indicators",
            "title": "Discover compatibility indicators",
            "description": "Look for inline indicators in your code:\n\n- ‚úÖ **Widely available** - Safe to use in production\n- ‚ö†Ô∏è **Newly available** - Recently became baseline, use with caution\n- üö´ **Limited support** - Not yet baseline, consider alternatives\n\nHover over any indicator to see detailed browser support information and links to MDN documentation.",
            "media": {
              "markdown": "media/walkthrough/step2.md"
            },
            "completionEvents": [
              "onCommand:baseline-lens.showHover"
            ]
          },
          {
            "id": "baseline-lens.step.check-problems",
            "title": "Review compatibility issues",
            "description": "Check the Problems panel to see all compatibility issues in your project. Baseline Lens reports features that might cause problems for your users.\n\n[Open Problems Panel](command:workbench.actions.view.problems)\n\nEach issue includes:\n- Feature name and location\n- Compatibility status\n- Quick links to documentation and alternatives",
            "media": {
              "markdown": "media/walkthrough/step3.md"
            },
            "completionEvents": [
              "onCommand:workbench.actions.view.problems"
            ]
          },
          {
            "id": "baseline-lens.step.generate-report",
            "title": "Generate a project compatibility report",
            "description": "Get a comprehensive overview of all web features used in your project and their compatibility status.\n\n[Generate Baseline Report](command:baseline-lens.generateReport)\n\nThe report shows:\n- Summary of features by compatibility level\n- Detailed breakdown by file\n- Recommendations for improving compatibility\n- Export options for team sharing",
            "media": {
              "markdown": "media/walkthrough/step4.md"
            },
            "completionEvents": [
              "onCommand:baseline-lens.generateReport"
            ]
          },
          {
            "id": "baseline-lens.step.configure-settings",
            "title": "Customize your experience",
            "description": "Configure Baseline Lens to match your project's browser support requirements.\n\n[Open Settings](command:workbench.action.openSettings?%5B%22baseline-lens%22%5D)\n\nKey settings:\n- **Support threshold**: Minimum browser support percentage\n- **Browser matrix**: Target specific browsers and versions  \n- **Diagnostic severity**: Control warning levels\n- **File exclusions**: Skip certain files or patterns",
            "media": {
              "markdown": "media/walkthrough/step5.md"
            },
            "completionEvents": [
              "onCommand:workbench.action.openSettings"
            ]
          },
          {
            "id": "baseline-lens.step.learn-more",
            "title": "Explore advanced features",
            "description": "You're all set! Here are some advanced features to explore:\n\n**Smart Suggestions**: Get alternative approaches for risky features\n**Code Actions**: Quick fixes and polyfill suggestions\n**CI/CD Integration**: Enforce compatibility in your build pipeline\n**Team Configuration**: Share settings across your team\n\n[Join Community](command:baseline-lens.openCommunity)",
            "media": {
              "markdown": "media/walkthrough/step6.md"
            },
            "completionEvents": []
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish",
    "vsce:publish-minor": "vsce publish minor",
    "vsce:publish-major": "vsce publish major",
    "prepare-release": "node scripts/prepare-release.js",
    "clean": "rimraf out *.vsix",
    "validate": "npm run lint && npm test && npm run compile"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@mdn/browser-compat-data": "^7.1.9",
    "acorn": "^8.8.1",
    "commander": "^10.0.1",
    "compute-baseline": "^0.4.0",
    "glob": "^8.0.3",
    "parse5": "^7.1.2",
    "postcss": "^8.4.20",
    "web-features": "^0.8.0"
  },
  "bin": {
    "baseline-lens": "./out/cli/index.js"
  }
}
